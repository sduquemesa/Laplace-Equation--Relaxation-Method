\usetheme[height=7mm]{Rochester}

\RequirePackage{pgf}

% \setbeamertemplate{navigation symbols}{}
\setbeamertemplate{navigation symbols}[vertical]

\pgfdeclareimage[height=1.8cm,width=\paperwidth]{superior}{cabecera}
\pgfdeclareimage[width=\paperwidth,height=\paperheight]{bgimgid}{plantilla.png}
\pgfdeclareimage[height=1.2cm,width=\paperwidth]{inferior}{pie}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamercovered{transparent}

\beamer@headheight=0.13\paperwidth

\definecolor{oxygenorange}{rgb}{0.90,0.4,0.04}
\definecolor{oxygengray}{HTML}{343434}
\definecolor{oxygenlightgray}{HTML}{eeeeee}
\definecolor{red}{rgb}{0.50,0.00,0.00}
\setbeamercolor*{Title bar}{fg=gray}
\setbeamercolor*{Location bar}{fg=oxygenorange,bg=red}
\setbeamercolor*{frametitle}{parent=Title bar}
\setbeamercolor*{block title}{bg=red,fg=white}
\setbeamercolor*{block body}{bg=oxygenlightgray,fg=red}
\setbeamercolor*{normal text}{bg=white,fg=oxygengray}
\setbeamercolor*{section in head/foot}{bg=red,fg=white}

\usecolortheme[named=red]{structure}

\setbeamerfont{section in head/foot}{size=\tiny,series=\normalfont}
\setbeamerfont{frametitle}{size=\large}

\setbeamertemplate{sections/subsections in toc}[ball]
\setbeamertemplate{items}[ball]

\setbeamertemplate{frametitle}{
  \vskip+0.7\beamer@headheight
  \vspace*{-7mm}
  \hskip0.0cm\usebeamerfont*{frametitle}\insertframetitle
  \vspace*{-3mm}
  \hskip0.7cm\usebeamerfont*{framesubtitle}\insertframesubtitle}

\setbeamertemplate{background}{\pgfuseimage{bgimgid}}

